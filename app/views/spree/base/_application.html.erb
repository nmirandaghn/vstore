<header class="header1">
		<div class="container-menu-header">
			<div class="topbar">
				<div class="topbar-social">
					<a href="#" class="topbar-social-item fa fa-cart-plus"></a>
					<a href="#" class="topbar-social-item fa fa-instagram"></a>
					<a href="#" class="topbar-social-item fa fa-pinterest-p"></a>
					<a href="#" class="topbar-social-item fa fa-snapchat-ghost"></a>
					<a href="#" class="topbar-social-item fa fa-youtube-play"></a>
				</div>

				<span class="topbar-child1">
					<%= t(:free_shipping) %>
				</span>

      <div class='header-icons'>
        <% if spree_current_user %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Inbox <span class="badge">1</span></a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile <img src=<%= image_url('icons/icon-header-01.png') %> class="header-icon1" alt="ICON"> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to Spree.t(:my_account), spree.account_path, class: "header-wrapicon1 dis-block" %></li>
                <li><%= link_to Spree.t(:logout), spree.logout_path %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <p class="navbar-text navbar-right"><%= link_to Spree.t(:login), spree.login_path %></p>
        <% end %>
        
        <span class="linedivide1"></span>

        <div class='header-wrapicon2'>
          <li id="link-to-cart" data-hook>
            <noscript>
              <%= link_to Spree.t(:cart), '/cart' %>
            </noscript>
            &nbsp;
          </li>
          <script>Spree.fetch_cart('<%= j spree.cart_link_url %>')</script>
        </div>
      </div>

			</div>
  <%= render :partial => 'spree/shared/header' %>
</header>
<%= flash_messages %>
<div class="container">
  <div id="wrapper" class="row" data-hook>

    <%#= breadcrumbs(@taxon) %>

    <%#= render :partial => 'spree/shared/sidebar' if content_for? :sidebar %>

		<div id="content" class="columns <%= !content_for?(:sidebar) ? "sixteen" : "twelve omega" %>" data-hook>
			<section class="newproduct bgwhite p-t-10 p-b-105">
      	<%= yield %>
			</section>
    </div>

    <%= yield :templates %>

  </div>
  <%= render :partial => 'spree/shared/footer' %>
</div>
