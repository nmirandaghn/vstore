                <li><%= link_to Spree.t(:my_account), spree.account_path, class: "header-wrapicon1 dis-block" %></li>
                <li><%= link_to Spree.t(:logout), spree.logout_path %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <p class="navbar-text navbar-right"><%= link_to Spree.t(:login), spree.login_path %></p>
        <% end %>
        
        <span class="linedivide1"></span>

        <div class='header-wrapicon2'>
          <li id="link-to-cart" data-hook>
            <noscript>
              <%= link_to Spree.t(:cart), '/cart' %>
            </noscript>
            &nbsp;
          </li>
          <script>Spree.fetch_cart('<%= j spree.cart_link_url %>')</script>
        </div>
      </div>
    </div><!-- /.navbar-collapse -->
