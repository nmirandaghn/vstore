    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="wrap_menu" id="bs-example-navbar-collapse-1">
      <nav class="menu">
        <ul class="main_menu">
          <% @taxonomies.each do |taxonomy| %>
            <li class='dropdown'>
              <%= link_to  '#', data: { toggle: "dropdown" }, "aria-haspopup" => 'true' do %>
                <%= taxonomy.name %> <span class='caret'></span>
              <% end %>
              <%= nav_tree(taxonomy.root, @taxon, 1) %>
            </li>
          <% end %>
        </ul>
      </nav>
      <div class='header-icons'>
        <% if spree_current_user %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Inbox <span class="badge">1</span></a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile <img src=<%= image_url('icons/icon-header-01.png') %> class="header-icon1" alt="ICON"> <span class="caret"></span></a>
